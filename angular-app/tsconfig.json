{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "classic",
    "lib": [ "es6", "dom"],

    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },

    "strict": true,
    "sourceMap": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "experimentalDecorators": true, // Annotations Angular

    // Pour Angular
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "core-js"
    ]
  }
}