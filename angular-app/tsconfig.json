{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    //"module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],

    "strict": true,
    "sourceMap": true,

    "rootDir": "./src",
    "types": ["node"], // Pour utiliser require dans les templates

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true // Annotations Angular
  },
  "exclude": [
    "./node_modules" // pour webpack
  ]
}